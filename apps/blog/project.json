{
  "name": "blog",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/blog",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/blog",
        "outputPath": "dist/apps/blog"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/blog"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "blog:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "blog:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "blog:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "blog:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/blog/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/blog/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "contember": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "docker-compose run --rm  contember-cli",
        "cwd": "apps/blog"
      }
    },
    "start": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "nx run blog:start-engine && concurrently nx run blog:start-admin nx run blog:start-website"
      }
    },
    "start-engine": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "docker-compose up --detach && nx run blog:contember migrations:execute -- --yes",
        "cwd": "apps/blog"
      }
    },
    "start-admin": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "vite apps/blog/admin --port 1480 --host 0.0.0.0"
      }
    },
    "start-website": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "next dev apps/blog/website"
      }
    },
    "build-admin": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "tsc --project admin && vite build admin"
      }
    },
    "build-api": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "tsc --project api"
      }
    },
    "build-website": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "next build apps/blog/website"
      }
    },
    "deploy": {
      "executor": "@nx/workspace:run-commands",
      "options": {
        "command": "nx run blog:build && docker-compose run contember-cli deploy"
      }
    }
  },
  "tags": []
}
